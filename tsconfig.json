{
  "compilerOptions": {
    "baseUrl": "./src",
    "esModuleInterop": true,
    "ignoreDeprecations": "5.0",
    "paths": {
      "Components/*": [
        "./components/*"
      ],
      "Services/*": [
        "./services/*"
      ],
      "Constants/*": [
        "./constants/*"
      ],
      "Interfaces/*": [
        "./interfaces/*"
      ],
      "ApiHooks/*": [
        "./apiHooks/*"
      ],
      "Utils/*": [
        "./utils/*"
      ],
      "Styles/*": [
        "./styles/*"
      ],
      "Assets/*": [
        "./assets/*"
      ],
      "Shared/*": [
        "./shared/*"
      ],
      "Pages/*": [
        "./pages/*"
      ],
      "OD/*": [
        "./outerDeclarations/*"
      ],
      "Providers/*": [
        "./providers/*"
      ],
      "Canisters/*": [
        "./canisters/*"
      ],
      "Stores/*": [
        "./stores/*"
      ],
      "SVGICons/*": [
        "./SVGIcons/*"
      ],
    },
    "outDir": "./dist",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "sourceMap": true,
    "checkJs": false,
    "allowJs": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
