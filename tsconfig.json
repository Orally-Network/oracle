{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "ES2020",
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2020",
    "paths": {
      "Components/*": [
        "./components/*"
      ],
      "Services/*": [
        "./services/*"
      ],
      "Constants/*": [
        "./constants/*"
      ],
      "Interfaces/*": [
        "./interfaces/*"
      ],
      "ApiHooks/*": [
        "./apiHooks/*"
      ],
      "Utils/*": [
        "./utils/*"
      ],
      "Styles/*": [
        "./styles/*"
      ],
      "Assets/*": [
        "./assets/*"
      ],
      "Shared/*": [
        "./shared/*"
      ],
      "Pages/*": [
        "./pages/*"
      ],
      "OD/*": [
        "./outerDeclarations/*"
      ],
      "Providers/*": [
        "./providers/*"
      ],
      "Canisters/*": [
        "./canisters/*"
      ],
      "Stores/*": [
        "./stores/*"
      ],
      "SVGICons/*": [
        "./SVGIcons/*"
      ],
      "Hooks/*": [
        "./hooks/*"
      ],
    },
    "outDir": "./dist",
    "incremental": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "thegraph",
    "public",
  ]
}
